generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ユーザーテーブル
model User {
  id    Int     @default(autoincrement()) @id
  name String
  email String @unique
  password String
  moneyDiary MoneyDiary[]
}

// 家計簿テーブル
model MoneyDiary {
  id    Int     @default(autoincrement()) @id
  // メモ
  memo  String?
  // 出金額
  withdrawal  Int
  // 支払い額
  payment  Int
  // 日付
  date  DateTime
  // 自動登録
  automaticRegistration Boolean
  // ユーザーID
  user User @relation(fields: [userId],references: [id])
  userId Int
  // 費目名
  expenseItemName String
  // カテゴリー
  categories MoneyDiary_Category[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

// 費目マスタテーブル
model ExpenseItem {
  id    Int   @default(autoincrement()) @id
  userId Int?
  name String
  // moneyDiary MoneyDiary[]
}

// カテゴリーテーブル
model Category {
  id   Int   @default(autoincrement()) @id
  name String
  moneyDiarys MoneyDiary_Category[]
}

// 家計簿-カテゴリー中間テーブル
model MoneyDiary_Category{
  moneyDiary MoneyDiary @relation(fields: [moneyDiaryId],references: [id])
  moneyDiaryId Int
  category Category @relation(fields: [categoryId],references: [id])
  categoryId Int
  
  @@id([moneyDiaryId,categoryId])
}